<body>

    <div class="main">

        <div class="wrapper">
            <div class="image">
                <img src="<%= post.image%>" alt="cat">
            </div>

            <div class="comment-section">
                <div class="escape">
                    <a href="/community">
                        <i class="fa-solid fa-arrow-left"></i>
                        <div>back</div>
                    </a>
                </div>

                <div class="hehe">
                    <div class="card-header">
                        <div class="header-name">
                            <div class="img-post">
                                <img src="<%= post.author.profile%>" alt="dog">
                                <p><%=post.author.username %> . <%= post.dateCreated.getDate()%>/<%= post.dateCreated.getMonth()%>/<%= post.dateCreated.getFullYear()%></p>
                            </div>
                            
                            <div class="dropdown">
                                <button>...</button>
                                <div class="report hidden" data-modal-target="#report">Report post</div>
                            </div>
                        </div>
    
                        <div class="title">
                            <div><%= post.title%></div>
                            <div class="post-title"><%= post.description%></div>
                        </div>
                        <button class="see-more-btn">See more</button>
                    </div>
    
                    <div class="card-footer">
                        <form>
                            <div class="heart-container" title="Like">
                                <input type="checkbox" class="checkbox" id="Give-It-An-Id">
