</head>
<%if (user.theme === 'light'){%>
    <body>
    <%} else{%>
    <body data-theme="dark">
    <%}%>
    <div class="main">
        <div class="wrapper">
            <div class="escape">
                <a href="/admin/users">
                    <i class="fa-solid fa-arrow-left"></i>
                    <div>Back</div>
                </a>
            </div>

            <div class="profile">
                <div class="profile-info">
                    <img src="<%=user.profile%>" alt="profile" class="profile-img">

                    <div class="profile-detail">
                        <div class="profile-name">
                            <div><%=user.username%></div>
                        </div>

                        <div class="profile-follow">
                            <div><%=allPosts.length%> posts</div>
                        </div>
                    </div>
                </div>

                <div class="profile-select">
                    <a href="/admin/userprofile" class="nav-link curr">
                        <i class="fa-solid fa-file"></i>
                        <p class="nav-text">Posts</p>
                    </a>

                    <a href="/admin/sellprofile" class="nav-link">
                        <i class="fa-solid fa-bag-shopping"></i>
                        <p class="nav-text">Sell</p>
                    </a>
                </div>

                <%allPosts.forEach(post => {%>                
                    <div class="profile-post">
                        <div class="card">
                            <div class="card-header">
                                <div class="header-name">
                                    <div class="img-post">
                                        <img src="<%=user.profile%>" alt="profile img">
                                        <p><%=user.username%> . <%=post.dateCreated.getDate()%>/<%=post.dateCreated.getMonth()%>/<%=post.dateCreated.getFullYear()%></p>
                                    </div>
                                
                                    <div class="dropdown">
                                        <button>...</button>
                                        <div class="report hidden" data-modal-target="#report">Delete post</div>
                                    </div>
                                </div>
    
                                <div class="title">
                                    <div><%=post.title%></div>
                                    <div class="post-title"><%=post.description%></div>
                                </div>
                                <button class="see-more-btn">See more</button>
                            </div>
    
                            <%if (post.image !== null) {%>
                                <div class="card-body">
                                    <img src="<%=post.image%>" alt="dog">
                                </div>
                            <%}%>
    
                            <div class="card-footer">
                                <form>
                                    <div class="heart-container" title="Like">
                                        <input type="checkbox" class="checkbox" id="Give-It-An-Id">
                                        <div class="svg-container">
                                            <svg viewBox="0 0 24 24" class="svg-outline" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M17.5,1.917a6.4,6.4,0,0,0-5.5,3.3,6.4,6.4,0,0,0-5.5-3.3A6.8,6.8,0,0,0,0,8.967c0,4.547,4.786,9.513,8.8,12.88a4.974,4.974,0,0,0,6.4,0C19.214,18.48,24,13.514,24,8.967A6.8,6.8,0,0,0,17.5,1.917Zm-3.585,18.4a2.973,2.973,0,0,1-3.83,0C4.947,16.006,2,11.87,2,8.967a4.8,4.8,0,0,1,4.5-5.05A4.8,4.8,0,0,1,11,8.967a1,1,0,0,0,2,0,4.8,4.8,0,0,1,4.5-5.05A4.8,4.8,0,0,1,22,8.967C22,11.87,19.053,16.006,13.915,20.313Z">
                                                </path>
                                            </svg>
                                            <svg viewBox="0 0 24 24" class="svg-filled" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M17.5,1.917a6.4,6.4,0,0,0-5.5,3.3,6.4,6.4,0,0,0-5.5-3.3A6.8,6.8,0,0,0,0,8.967c0,4.547,4.786,9.513,8.8,12.88a4.974,4.974,0,0,0,6.4,0C19.214,18.48,24,13.514,24,8.967A6.8,6.8,0,0,0,17.5,1.917Z">
                                                </path>
                                            </svg>
                                            <svg class="svg-celebrate" width="100" height="100" xmlns="http://www.w3.org/2000/svg">
                                                <polygon points="10,10 20,20"></polygon>
                                                <polygon points="10,50 20,50"></polygon>
                                                <polygon points="20,80 30,70"></polygon>
                                                <polygon points="90,10 80,20"></polygon>
                                                <polygon points="90,50 80,50"></polygon>
                                                <polygon points="80,80 70,70"></polygon>
                                            </svg>
                                        </div>
                                    </div>
                                    <p>100</p>
                                </form>
                            
                                <div>
                                    <div type="button" class="commentBtn" data-modal-target="#modal">
                                        <i class="fa-regular fa-comment d-inline"></i>
                                    </div>
                                    <p>100</p>
                                </div>
                            </div>
                        </div>
                    </div>
                <%})%>
                <div class="pag">
                    <button>Load more</button>
                </div>
            </div>
        </div>

        <nav class="navbar" aria-label="Main Navigation">
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="/admin/users" class="nav-link" aria-label="Users List">
                        <i class="fa-solid fa-people-group"></i>
                        <p class="nav-text">Users List</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/admin/post" class="nav-link" aria-label="Manage Posts">
                        <i class="fa-solid fa-file"></i>
                        <p class="nav-text">Manage Posts</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/admin/adoption" class="nav-link" aria-label="Manage Posts">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <p class="nav-text">Manage Adoption</p>
                    </a>
                </li>

                <li class="nav-item">
                    <a href="/admin/setting" class="nav-link" aria-label="Setting">
                        <i class="fa-solid fa-gear"></i>
                        <p class="nav-text">Setting</p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

