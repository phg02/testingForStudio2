</head>
<%if (user.theme === 'light'){%>
    <body>
    <%} else{%>
    <body data-theme="dark">
    <%}%>

    <div class="main">
        <div class="wrapper">
            <div class="profile">
                <div class="profile-info">
                    <img src="<%= user.profile%>" alt="profile" class="profile-img">
    
                    <div class="profile-detail">
                        <div class="profile-name">
                            <div id="profile-name" aria-labelledby="profile-name"><%=user.username%></div>
                            <a href="/setting" aria-label="Settings">
                                <i class="fa-solid fa-gear"></i>
                            </a>
                        </div>
    
                        <div class="profile-follow">
                            <div><%= allPosts.length%> posts</div>
                        </div>
                    </div>
                </div>
    
                <div class="profile-select">
                    <a href="/user/postprofile" class="nav-link curr" aria-label="User posts">
                        <i class="fa-solid fa-file"></i>
                        <p class="nav-text">Posts</p>
                    </a>
    
                    <a href="/user/sellerprofile" class="nav-link" aria-label="User sales">
                        <i class="fa-solid fa-bag-shopping"></i>
                        <p class="nav-text">Sell</p>
                    </a>
                </div>

                <div class="profile-post">

                    <!-- //card img -->
                    <%allPosts.forEach(post =>{%>
                        <%if(post.image !== null){%>
                            <div class="card">
                                <div class="card-header">
                                    <div class="header-name">
                                        <div class="img-post">
                                            <img src="<%= post.author.profile%>" alt="Profile picture">
                                            <p aria-label="User information"><%=post.author.username %> . <%= post.dateCreated.getDate()%>/<%= post.dateCreated.getMonth()%>/<%= post.dateCreated.getFullYear()%></p>
                                        </div>
                                        
                                        <div class="dropdown">
                                            <button aria-label="More options">...</button>
                                            <div class="report hidden" data-modal-target="#<%='p'+post%>" aria-label="Delete post option">Delete post</div>
                                        </div>
                                    </div>
                        
                                    <div class="title">
                                        <div aria-label="Post title"><%= post.title%></div>
                                        <div class="post-title" aria-label="Post content"><%= post.description%></div>
                                    </div>
                                    <button class="see-more-btn" aria-label="See more button">See more</button>
                                </div>
                        
                                <div class="card-body">
                                    <img src="<%= post.image%>" alt="Post image">
                                </div>
            
                                <div class="card-footer">
                                    <a href="/community/post/<%= post.id%>"><div type="button" class="commentBtn" aria-label="Comment on post">
                                        View full post
                                    </div></a>
                                </div>
                            </div>
                        <%}else{%>
                             <!-- //card none -->
                    <div class="card">
                        <div class="card-header">
                            <div class="header-name">
                                <div class="img-post">
                                    <img src="<%= post.author.profile%>" alt="dog">
                                    <p aria-label="User information"><%=post.author.username %> . <%= post.dateCreated.getDate()%>/<%= post.dateCreated.getMonth()%>/<%= post.dateCreated.getFullYear()%></p>
                                </div>
                                
                                <div class="dropdown">
                                    <button>...</button>
                                    <div class="report hidden" data-modal-target="#<%='p'+ post.id%>" aria-label="Delete post option">Delete post</div>
                                </div>
                            </div>
    
                            <div class="title">
                                <div><%= post.title%></div>
                                <div class="post-title" aria-label="Post content"><%= post.description%></div>
                            </div>
                            <button class="see-more-btn" aria-label="See more button">See more</button>
                        </div>
    
                        <div class="card-footer">
                            <a href="/community/post/<%= post.id%>"><div type="button" class="commentBtn" aria-label="Comment on post">
                                View full post
                            </div></a>
                        </div>
                    </div>
                        <%}%>
                    
                    <%})%>
                   
                   
                    
                </div>
                <div class="pag">
                    <button aria-label="Load more button">Load more</button>
                </div>
            </div>
        </div>

        <nav class="navbar">
            <ul class="nav-list">
                <li class="nav-item">
                    <a href="/community" class="nav-link" aria-label="Community">
                        <i class="fa-solid fa-people-group"></i>
                        <p class="nav-text">Community</p>
                    </a>
                </li>
        
                <li class="nav-item">
                    <a href="/adoption" class="nav-link" aria-label="Adoption">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <p class="nav-text">Adoption</p>
                    </a>
                </li>
        
                <li class="nav-item">
                    <a href="/community/createpost" class="nav-link" aria-label="Create post">
                        <i class="fa-solid fa-square-plus"></i>
                        <p class="nav-text">Create post</p>
                    </a>
                </li>
        
                <li class="nav-item">
                    <a href="/user/postprofile" class="nav-link" aria-label="Profile">
                        <i class="fa-solid fa-user"></i>
                        <p class="nav-text">Profile</p>
                    </a>
                </li>
        
                <li class="nav-item">
                    <a href="/setting" class="nav-link" aria-label="Setting">
                        <i class="fa-solid fa-gear"></i>
                        <p class="nav-text">Setting</p>
                    </a>
                </li>
            </ul>
        </nav>
    </div>

